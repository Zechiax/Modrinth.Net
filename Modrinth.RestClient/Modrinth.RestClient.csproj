<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	    <Description>A Modrinth API wrapper using RestEase</Description>
        <RepositoryUrl>https://github.com/Zechiax/Modrinth.RestClient</RepositoryUrl>
        <PackageTags>modrinth;api;labrinth;restease</PackageTags>
        <Authors>Zechiax</Authors>
        <PackageReleaseNotes>Add support for shaderpacks
Update all dependencies</PackageReleaseNotes>
	    <PackageLicenseExpression>MIT</PackageLicenseExpression>
	    <GenerateDocumentationFile>true</GenerateDocumentationFile>
	    <PackageReadmeFile>README.md</PackageReadmeFile>
	    <PackageVersion>2.5.6</PackageVersion>
    </PropertyGroup>

    <ItemGroup>
      <None Include="..\README.md">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="7.0.1" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
      <PackageReference Include="RestEase" Version="1.6.1" />
    </ItemGroup>

</Project>
