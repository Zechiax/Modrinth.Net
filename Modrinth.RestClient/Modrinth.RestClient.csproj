<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	    <Description>A Modrinth API wrapper using RestEase</Description>
        <RepositoryUrl>https://github.com/Zechiax/Modrinth.RestClient</RepositoryUrl>
        <PackageTags>modrinth;api;labrinth;restease</PackageTags>
        <Authors>Zechiax</Authors>
        <PackageReleaseNotes>- Added support for getting version by file hash
</PackageReleaseNotes>
	    <PackageLicenseExpression>MIT</PackageLicenseExpression>
	    <GenerateDocumentationFile>true</GenerateDocumentationFile>
	    <PackageReadmeFile>README.md</PackageReadmeFile>
	    <PackageVersion>2.5.2</PackageVersion>
    </PropertyGroup>

    <ItemGroup>
      <None Include="..\README.md">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="6.0.10" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
      <PackageReference Include="RestEase" Version="1.5.7" />
    </ItemGroup>

</Project>
